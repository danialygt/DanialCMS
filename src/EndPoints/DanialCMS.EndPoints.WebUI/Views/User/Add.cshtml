@model AddUserViewModel
@{
    ViewData["Title"] = "افزودن کاربر";
}



<div class="row d-flex justify-content-center">
    <div class="col-lg-6">
        <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Add">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user mx-1"></i>
                    <small>افزودن</small>
                    <strong class="card-title pl-2">کاربر</strong>
                </div>
                <div class="card-body card-block">
                    <div class="form-group">
                        <label asp-for="@Model.FirstName" class="form-control-label"></label>
                        <input type="text" asp-for="@Model.FirstName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LastName" class="form-control-label"></label>
                        <input type="text" asp-for="@Model.LastName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserName" class="form-control-label"></label>
                        <input type="text" asp-for="@Model.UserName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="form-control-label"></label>
                        <input type="text" asp-for="@Model.Email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password" class="form-control-label"></label>
                        <input type="password" asp-for="@Model.Password" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger mr-3"></div>
                    </div>
                </div>
                <div class="card-footer card-footer__button">
                    <input type="submit" class="btn btn-warning btn-sm px-3" value="افزودن" />
                </div>
            </div>
        </form>
    </div>
</div>