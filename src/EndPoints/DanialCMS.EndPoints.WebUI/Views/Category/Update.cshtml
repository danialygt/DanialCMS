@model UpdateCategoryViewModel
@{
    ViewData["Title"] = "ویرایش دسته بندی";
}




@if (Model != null)
{

    <div class="row d-flex justify-content-center ">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-user"></i>
                    <strong class="card-title pl-2">ویرایش دسته بندی</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <form method="post" asp-controller="Category" asp-action="Update" asp-route-CategoryId="@Model.CategoryId">
                            
                            <h5 class="text-sm-center mt-2 mb-1">@Model.Name</h5>
                            <div class="form-group">
                                <label asp-for="@Model.Name" class="form-control-label"></label>
                                <input type="text" class="form-control" asp-for="@Model.Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger mr-3"></div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-warning btn-sm" value="ویرایش" />
                            </div>
                        </form>
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>



}
else
{
    <div class="row d-flex justify-content-center">
        <div class="alert alert-danger" role="alert">
            دسته بندی یافت نشد!
        </div>
    </div>
}