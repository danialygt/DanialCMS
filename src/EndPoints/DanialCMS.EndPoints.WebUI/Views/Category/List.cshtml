@model List<Category>
@{
    ViewData["Title"] = "لیست دسته بندی";
}

    <div class="row d-flex justify-content-center card  ">
        <div class="col-md-12">

            <div class="row d-flex justify-content-between card-header align-items-center">
                <h3 class="title-5">دسته بندی ها</h3>
                <div>
                    <a class="btn btn-warning" asp-controller="Category" asp-action="Add">
                        <i class="zmdi zmdi-plus"> افزودن </i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="row ">
                        @foreach (var item in Model)
                        {
                            <div class="bg-dark text-white d-flex m-2 p-4 mx-3">
                                <div>
                                    @item.Name
                                </div>
                                <div class="table-data-feature  mr-3">
                                    <a class="item" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="row d-flex justify-content-center">
                        <div class="alert alert-danger" role="alert">
                            دسته بندی یافت نشد!
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>