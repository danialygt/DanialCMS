@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "_AccountLayout";
}


<div class="login-wrap">
    <div class="login-content">
        <div class="login-logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/icon/logo-yellow.png" alt="Danial CMS">
            </a>
        </div>
        <div class="login-form">
            <div class="form-group text-dark text-center title-3">
                فراموشی کلمه عبور
            </div>
            <hr>
            <form asp-controller="Account" asp-action="ForgetPassword"
                  method="post">
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input class="au-input au-input--full"
                           type="email" name="email"
                           asp-for="@Model.Email">
                </div>
                <div class="form-group">
                    <div asp-validation-summary="All"
                         class="text-danger"></div>
                </div>
                <button class="btn btn-warning w-100 m-b-20"
                        type="submit">
                    ارسال
                </button>
            </form>
        </div>
    </div>
</div>

