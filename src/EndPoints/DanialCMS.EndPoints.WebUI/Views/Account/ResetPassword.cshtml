@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ویرایش رمز عبور";
    Layout = "_AccountLayout";
}


<div class="login-wrap">
    <div class="login-content">
        <div class="login-logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/icon/logo-yellow.png" alt="Danial CMS">
            </a>
        </div>
        <div class="login-form">
            <div class="form-group text-dark text-center title-3">
                ریست کلمه عبور
            </div>
            <hr>
            <form asp-controller="Account"
                  asp-action="ResetPassword" method="post"
                  asp-route-Email="@Model.Email"
                  asp-route-Token="@Model.Token">

                <div class="form-group">
                    <label asp-for="@Model.Password" class="form-control-label"></label>
                    <input type="password" asp-for="@Model.Password" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RePassword" class="form-control-label"></label>
                    <input type="password" asp-for="@Model.RePassword" class="form-control" required />
                </div>
                
                <div class="form-group">
                    <div asp-validation-summary="All"
                         class="text-danger"></div>
                </div>
                <button class="btn btn-warning w-100 m-b-20"
                        type="submit">
                    ویرایش
                </button>
            </form>
        </div>
    </div>
</div>

