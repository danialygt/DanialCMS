@model EditWriterViewModel
@{
    ViewData["Title"] = "ویرایش نویسنده";
    string photoUrl = (Model != null && Model.PhotoUrl != null) ? Model.PhotoUrl : "/photos/profilePhotoNotFound.png";

}




@if (Model != null)
{

    <div class="row d-flex justify-content-center ">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-user"></i>
                    <strong class="card-title pl-2">ویرایش اطلاعات</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <form method="post" asp-controller="Writer" asp-action="Update" asp-route-Id="@Model.Id">
                            <img class="rounded-circle mx-auto d-block" style="width:150px;height:150px;" src="@photoUrl" alt="Card image cap" />
                            <div class="form-group">
                                <label asp-for="@Model.File" class="form-control-label"></label>
                                <input type="file" class="form-control" autofocus asp-for="@Model.File" >
                            </div>
                        <h5 class="text-sm-center mt-2 mb-1">@Model.Name</h5>
                            <div class="form-group">
                                <label asp-for="@Model.Name" class="form-control-label"></label>
                                <input type="text" class="form-control" asp-for="@Model.Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger mr-3"></div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-warning btn-sm" value="ویرایش" />
                            </div>
                        </form>
                        <hr>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>



}
else
{
    <div class="row d-flex justify-content-center">
        <div class="alert alert-danger" role="alert">
            نویسنده یافت نشد!
        </div>
    </div>
}