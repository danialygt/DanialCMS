@model AddWriterViewModel
@{
    ViewData["Title"] = "افزودن نویسنده";
}



<div class="row d-flex justify-content-center" >
    <div class="col-lg-6">
        <form method="post" enctype="multipart/form-data" asp-controller="Writer" asp-action="Add">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user mx-1"></i>
                    <small>افزودن</small>
                    <strong class="card-title pl-2">نویسنده</strong>
                </div>
                <div class="card-body card-block">
                    <div class="form-group">
                        <label asp-for="@Model.Name" class="form-control-label"></label>
                        <input type="text" asp-for="@Model.Name" class="form-control" required maxlength="30" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.file" class="form-control-label"></label>
                        <input type="file" asp-for="@Model.file" class="form-control-file">@*name="file-input"*@
                    </div>          
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger mr-3"></div>
                    </div>
                </div>
                <div class="card-footer card-footer__button">
                    <input type="submit" class="btn btn-warning btn-sm px-3" value="افزودن" />
                </div>            
            </div>
        </form>
    </div>
</div>